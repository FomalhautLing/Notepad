<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settingOptionHeight"
    android:background="@drawable/bg_setting_option"
    android:padding="@dimen/paddingToScreen"
    android:rowCount="2"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/icon"
        style="@style/SettingOptionIcon"
        android:src="@mipmap/setting_option_palette"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="Option title"
        android:textSize="@dimen/large" />

    <TextView
        android:id="@+id/desc"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="Option desc"
        android:textSize="@dimen/small" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchBtn"
        style="@style/SettingOptionSwitch"
        android:textOff="关"
        android:textOn="开" />

    <TextView
        android:id="@+id/switchBtnState"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:text="关" />

    <ImageView
        android:id="@+id/expandHintArrow"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:importantForAccessibility="no"
        android:src="@mipmap/hint_arrow2" />

</GridLayout>
