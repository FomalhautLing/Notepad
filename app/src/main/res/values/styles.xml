<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- tool -->
    <style name="ToolItem">
        <item name="android:layout_width">@dimen/toolItemWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>


    <!-- footer -->
    <style name="FooterItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">@dimen/small</item>
    </style>


    <!-- dialog -->
    <style name="DialogFullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:layout_height">@dimen/dialogButtonHeight</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>