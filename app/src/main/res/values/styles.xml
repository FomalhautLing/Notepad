<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- tool -->
    <style name="ToolItem">
        <item name="android:layout_width">@dimen/toolItemWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>


    <!-- footer -->
    <style name="FooterItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!-- setting -->
    <style name="SettingOptionIcon">
        <item name="android:layout_width">@dimen/settingOptionIconWidth</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="SettingOptionSwitch">
        <item name="android:layout_row">0</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_column">2</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="thumbTint">@drawable/switch_thumb_tint</item>
        <item name="track">@drawable/switch_track</item>
        <item name="trackTint">@drawable/switch_track_tint</item>
    </style>


    <!-- dialog -->
    <style name="DialogFullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:layout_height">@dimen/dialogButtonHeight</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>